<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HelpFragment">

    <Button
        android:id="@+id/addService"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button"
        android:text="Добавить"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/viewService"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageRes" />
    <Button
        android:id="@+id/viewService"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button"
        android:text="Посмотреть"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addService"
        app:layout_constraintTop_toBottomOf="@+id/imageRes" />

    <EditText
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:hint="Цена"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/viewService"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addService"
        app:layout_constraintTop_toBottomOf="@+id/type" />

    <EditText
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:hint="Размер"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/viewService"
        app:layout_constraintStart_toStartOf="@+id/addService"
        app:layout_constraintTop_toBottomOf="@+id/category" />

    <EditText
        android:id="@+id/category"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:hint="Категория"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/viewService"
        app:layout_constraintStart_toStartOf="@+id/addService"
        app:layout_constraintTop_toBottomOf="@+id/itemText" />

    <EditText
        android:id="@+id/itemText"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:hint="Название"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/viewService"
        app:layout_constraintStart_toStartOf="@+id/addService"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/imageRes"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:hint="Картинка"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/viewService"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addService"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="409dp"
        android:layout_height="436dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addService" />

</androidx.constraintlayout.widget.ConstraintLayout>


