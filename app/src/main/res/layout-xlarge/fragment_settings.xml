<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">


    <Toolbar
        android:id="@+id/toolbar_about"
        android:background="@color/colorToolbar"
        android:layout_width="match_parent"
        android:layout_height="140dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/flogo">

        </ImageView>


        <TextView
            android:id="@+id/text_about_app"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:layout_width="460dp"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:textSize="42sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="О программе">


        </TextView>

    </Toolbar>
    <ImageView
        android:id="@+id/screen_about_prog"
        android:layout_width="296dp"
        android:layout_height="242dp"
        android:src="@drawable/screen_about"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="42dp"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flawless Shop"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/screen_about_prog"
            android:textColor="@color/colorOrange"
            android:textSize="34dp">

        </TextView>


    <TextView
        android:id="@+id/complited"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:textSize="34dp"
        android:text="Выполнили:">

    </TextView>

    <TextView
        android:id="@+id/fio1"
        android:layout_marginTop="10dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complited"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:textSize="34dp"
        android:text="Узких Глеб Юрьевич">

    </TextView>
    <TextView
        android:id="@+id/fio2"
        android:layout_marginTop="10dp"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fio1"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:textSize="34dp"
        android:text="Федотов Иван Сергеевич">

    </TextView>

    <TextView
        android:id="@+id/group"
        android:layout_marginTop="10dp"
        android:layout_width="00dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fio2"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:textSize="34dp"
        android:text="Группа: 351017">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>